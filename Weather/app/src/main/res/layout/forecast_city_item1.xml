<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relMainForcast"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="@dimen/_5sdp"
    android:layout_marginEnd="@dimen/item_horizontal_margin"
    android:layout_marginStart="@dimen/item_horizontal_margin"
    android:layout_marginBottom="@dimen/_5sdp"
    android:orientation="vertical"
    app:cardBackgroundColor="#000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/txtForcastDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:gravity="center_horizontal"
                android:singleLine="true"
                android:text="@{cityforecast}"

                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_18ssp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/txtForcastMaxTemp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/uparrow_icon"
                    android:paddingLeft="@dimen/_4sdp"
                    android:singleLine="true"
                    android:text="25"
                    android:textColor="#007e28"
                    android:textSize="@dimen/_20ssp" />


                <TextView
                    android:id="@+id/txtForcastMinTemp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/downarrow_icon"
                    android:paddingLeft="@dimen/_4sdp"
                    android:singleLine="true"
                    android:text="25"
                    android:textColor="#000ba1"
                    android:textSize="@dimen/_20ssp" />


            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10ssp"
            android:orientation="horizontal">


                <ImageView
                    android:id="@+id/imgFrocastWeatherStatus"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:gravity="center" />




                <TextView
                    android:id="@+id/txtFrocastHumidityInfo"
                    android:drawableTop="@drawable/humidity_forcast"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1.0"
                    android:singleLine="true"
                    android:text="55"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_18ssp" />

                <TextView
                    android:drawableTop="@drawable/wind_forcast"
                    android:id="@+id/txtFrocastWindInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1.0"
                    android:singleLine="true"
                    android:text="55"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_18ssp" />

                <TextView
                    android:id="@+id/txtFrocastPressureInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1.0"
                    android:singleLine="true"
                    android:text="55"
                    android:drawableTop="@drawable/pressure_forcast"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_18ssp" />

        </LinearLayout>


                <TextView
                    android:paddingLeft="@dimen/_15sdp"

                    android:layout_marginBottom="@dimen/_10ssp"
                    android:layout_marginTop="@dimen/_10ssp"
                    android:id="@+id/txtForcastDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:capitalize="sentences"
                    android:gravity="center"
                    android:inputType="textCapSentences"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="#894d4d"
                    android:textSize="@dimen/_14ssp" />

    </LinearLayout>



</android.support.v7.widget.CardView>
